<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".CreateRecipeActivity"
            android:layout_margin="24dp">
            <TextView
                android:id="@+id/txt_name_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Recipe"
                android:textColor="@android:color/black"
                android:textSize="24sp"/>
            <LinearLayout
                android:id="@+id/layout_header"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name_action"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp">
                <ImageView
                    android:id="@+id/btn_add_cover"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:background="@drawable/button_gray_background"
                    android:src="@drawable/ic_plus"
                    android:scaleType="center"
                    android:textColor="@color/colorGray"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recipe Name" />
                    <EditText
                        android:id="@+id/et_recipe_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Write Down Recipe Name"/>

                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/layout_desc"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_header"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recipe Description"
                        android:layout_marginBottom="16dp"/>
                    <EditText
                        android:id="@+id/et_recipe_desc"
                        android:inputType="text|textMultiLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Write Down Recipe Desciption"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Gallery-->
            <androidx.cardview.widget.CardView
                android:id="@+id/layout_gallery"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_desc"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:layout_marginBottom="16dp"/>
                    <Button
                        android:id="@+id/btn_add_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gray_background"
                        android:drawableLeft="@drawable/ic_plus"
                        android:padding="16dp"
                        android:hint="Upload Images or Open Camera"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Ingredient-->
            <androidx.cardview.widget.CardView
                android:id="@+id/layout_ingredients"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_gallery"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingredients"
                        android:layout_marginBottom="16dp"/>
                    <Button
                        android:id="@+id/btn_add_ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gray_background"
                        android:drawableLeft="@drawable/ic_plus"
                        android:padding="16dp"
                        android:hint="Add Ingredient"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--How to Cook-->
            <androidx.cardview.widget.CardView
                android:id="@+id/layout_howtocook"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_ingredients"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How to Cook"
                        android:layout_marginBottom="16dp"/>
                    <Button
                        android:id="@+id/btn_add_direction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gray_background"
                        android:drawableLeft="@drawable/ic_plus"
                        android:padding="16dp"
                        android:hint="Add Directions"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--How to Cook-->
            <androidx.cardview.widget.CardView
                android:id="@+id/layout_info"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_howtocook"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Info"
                        android:layout_marginBottom="16dp"/>
                    <Button
                        android:id="@+id/btn_add_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gray_background"
                        android:drawableLeft="@drawable/ic_plus"
                        android:padding="16dp"
                        android:hint="Add Info"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Button-->
            <Button
                android:id="@+id/btn_save_recipe"
                android:layout_below="@id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_light_background"
                android:textColor="@color/colorPrimary"
                android:padding="16dp"
                android:textAllCaps="false"
                android:layout_marginTop="16dp"
                android:text="Save Recipe"/>
            <Button
                android:id="@+id/btn_post"
                android:layout_below="@id/btn_save_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_invisible_background"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:text="Post to Feed"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>