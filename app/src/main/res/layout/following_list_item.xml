<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/other_avatar"
        android:layout_below="@+id/my_kitchen"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/other_avatar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/other_avatar"
        android:layout_below="@+id/my_kitchen"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="16dp"
        android:id="@+id/other_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pref_bio_default"
        android:layout_below="@+id/other_name"
        android:layout_toRightOf="@+id/other_avatar"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:id="@+id/other_bio"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999 followers  |  50k likes"
        android:layout_below="@id/other_bio"
        android:layout_toEndOf="@id/other_avatar"
        android:layout_marginLeft="16dp"
        android:id="@+id/other_info"/>

</RelativeLayout>