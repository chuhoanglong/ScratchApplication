<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="My Kitchen"
    android:textSize="24dp"
    android:padding="8dp"
    android:id="@+id/my_kitchen"
    />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_settings"
       android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:id="@+id/settings"
        />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/my_avatar"
            android:layout_below="@+id/my_kitchen"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/avatar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Long Tinder"
            android:layout_toRightOf="@+id/avatar"
            android:layout_below="@+id/my_kitchen"
            android:layout_marginTop="16dp"
            android:textSize="16dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="16dp"
            android:id="@+id/name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ChÄƒn Rau Master"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/avatar"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:id="@+id/job"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999 followers  |  50k likes"
            android:layout_below="@id/job"
            android:layout_toRightOf="@id/avatar"
            android:layout_margin="16dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/edit_profile"
            android:layout_below="@id/settings"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar"
            android:layout_marginTop="16dp"
            android:id="@+id/Tab_Layout"
            >
            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20\nRecipes"
                />
            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="75\nSaved"
                />
            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="240\nFollowing"
                />
        </com.google.android.material.tabs.TabLayout>
        <ImageView
            android:layout_width="155dp"
            android:layout_height="100dp"
            android:layout_below="@id/Tab_Layout"
            android:src="@drawable/img6"
            android:layout_margin="16dp"
            android:id="@+id/img6"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sweets"
            android:layout_below="@id/img6"
            android:layout_marginLeft="70dp"
            android:id="@+id/tv_img6"/>
        <ImageView
            android:layout_width="155dp"
            android:layout_height="100dp"
            android:src="@drawable/img5"
            android:layout_toRightOf="@id/img6"
            android:layout_below="@id/Tab_Layout"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:id="@+id/img5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img5"
            android:text="Italian"
            android:layout_toRightOf="@id/img6"
            android:layout_marginLeft="86dp"
            android:id="@+id/tv_img5"/>
        <ImageView
            android:layout_width="155dp"
            android:layout_height="100dp"
            android:src="@drawable/img4"
            android:layout_below="@id/tv_img6"
            android:layout_margin="16dp"
            android:id="@+id/img4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img4"
            android:text="Deserts"
            android:layout_marginLeft="70dp"
            android:id="@+id/tv_img4"/>
        <ImageView
        android:layout_width="155dp"
        android:layout_height="100dp"
        android:src="@drawable/img3"
        android:layout_toRightOf="@id/img4"
        android:layout_below="@id/tv_img5"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:id="@+id/img3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img3"
            android:text="Chocolate"
            android:layout_toRightOf="@id/img4"
            android:layout_marginLeft="86dp"
            android:id="@+id/tv_img3"/>

        <ImageView
            android:layout_width="155dp"
            android:layout_height="100dp"
            android:src="@drawable/img2"
            android:layout_below="@id/tv_img4"
            android:layout_margin="16dp"
            android:id="@+id/img2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img2"
            android:text="Whatever"
            android:layout_marginLeft="70dp"
            />
        <ImageView
            android:layout_width="155dp"
            android:layout_height="100dp"
            android:src="@drawable/img1"
            android:layout_toRightOf="@id/img2"
            android:layout_below="@id/tv_img3"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:id="@+id/img1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img1"
            android:text="Ahhhhh"
            android:layout_toRightOf="@id/img2"
            android:layout_marginLeft="86dp"/>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            app:menu="@menu/bottom_navigation_menu"/>
    </RelativeLayout>

</LinearLayout>