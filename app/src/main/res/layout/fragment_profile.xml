<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="56dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Kitchen"
            android:textSize="24dp"
            android:padding="8dp"
            android:id="@+id/my_kitchen"
            />

        <Button
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:id="@+id/settings"
            android:clickable="true"
            android:layout_height="25dp"
            android:layout_width="100dp"
            android:background="@drawable/icon_settings"
            android:paddingRight="16dp"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/my_avatar"
            android:layout_below="@+id/my_kitchen"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/avatar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_full_name_default"
            android:layout_toRightOf="@+id/avatar"
            android:layout_below="@+id/my_kitchen"
            android:layout_marginTop="16dp"
            android:textSize="16dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="16dp"
            android:id="@+id/name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_bio_default"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/avatar"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:id="@+id/job"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999 followers  |  50k likes"
            android:layout_below="@id/job"
            android:layout_toRightOf="@id/avatar"
            android:layout_margin="16dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/edit_profile"
            android:layout_below="@id/settings"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:id="@+id/edit_profile"/>
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar"
            android:layout_marginTop="16dp"
            android:id="@+id/Tab_Layout"
            >
            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20\nRecipes"
                />
            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="75\nSaved"
                />
            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="240\nFollowing"
                />
        </com.google.android.material.tabs.TabLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_my_recipes"
            android:layout_below="@id/Tab_Layout"
            android:layout_centerHorizontal="true"
            />

</RelativeLayout>
</LinearLayout>